<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <%= dose.ingredient.name  %>
  <%= dose.description %>
    <%= link_to "Remove dose", dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?" }  %>
<% end %>


<%= link_to "Delete this cocktail", cocktail_path(@cocktail),
  method: :delete,
  data: { confirm: "Are you sure?" }  %>
<%= link_to "Go to home", cocktails_path  %>