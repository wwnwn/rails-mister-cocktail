<div class="navbar navbar-expand navbar-light navbar-lewagon one fixed-top">
      <%= link_to cocktails_path, class: "navbar-brand" do %>
        <i class="fas fa-cocktail"></i>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Cocktails", cocktails_path, class: "nav-link", style: "color: purple;" %>
          </li>
<%= form_for(@cocktail) do |f| %>
  <div class="form-group">
    <%= f.label :name, style: "color: white" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
